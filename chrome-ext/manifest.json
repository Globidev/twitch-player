{
  "manifest_version": 2,

  "name": "Open in Twitch Player",
  "description": "Runs Twitch web streams in Twitch Player",
  "version": "0.1",

  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": ["run.js"],
    "persistent": false
  }
}
