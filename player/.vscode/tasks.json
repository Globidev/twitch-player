{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}/scripts/build.bat",
                "args": [
                    "debug"
                ]
            },
            "command": "nmake",
        },
        {
            "label": "qmake",
            "group": "build",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}/scripts/qmake.bat"
            }
        },
        {
            "label": "release",
            "group": "build",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}/scripts/build.bat",
                "args": [
                    "release"
                ]
            },
            "command": "nmake",

        },
    ]
}
